<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - LandingPage</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/LandingPage.styles.css" asp-append-version="true"/>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            @{
                string currentAction = ViewContext.RouteData.Values["action"].ToString();
                string currentController = ViewContext.RouteData.Values["controller"].ToString();
            }
            
            @if (currentController == "Home" && currentAction == "Index")
            {
                <!-- Если мы находимся на главной странице (Index), ссылка будет вести на секцию About -->
                <a href="#About" class="navbar-brand">BeautyMania</a>
            }
            else
            {
                <!-- Если мы не находимся на главной странице, ссылка будет вести на главную страницу -->
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">BeautyMania</a>
            }

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1 justify-content-md-end">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            @if (User.Identity.IsAuthenticated)
                            {
                                <form asp-controller="User" asp-action="SignOut" method="post" asp-antiforgery="true">
                                    <button type="submit" class="btn btn-info">Выйти</button>
                                </form>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Register">Регистрация</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Login">Вход</a>
                                </li>
                            }
                        </ul>
                    </div>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2024 - LandingPage - <a asp-area="" asp-controller="Home" asp-action="Index">Index</a>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>